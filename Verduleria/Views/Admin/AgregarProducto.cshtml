@model Verduleria.Models.Producto
@{
    ViewData["Title"] = "Verduleria";
    Layout = "_AdminLayout";
}

<div class="container-xxl position-relative bg-white d-flex p-0">
    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <form asp-action="AgregarProducto" asp-controller="Admin" method="post" class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Nuevo Producto</h6>
                <label asp-for="Nombre"></label>
                <div class="input-group mb-3">
                    <input asp-for="Nombre" type="text" class="form-control" />
                    <span asp-validation-for="Nombre"></span>
                </div>
                <label asp-for="Descripcion"></label>
                <div class="input-group mb-3">
                    <input asp-for="Descripcion" type="text" class="form-control" />
                    <span asp-validation-for="Descripcion"></span>
                </div>
                <label asp-for="Cantidad"></label>
                <div class="input-group mb-3">
                    <input asp-for="Cantidad" type="number" class="form-control" />
                    <span asp-validation-for="Cantidad"></span>
                </div>
                <label asp-for="Precio" ></label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input asp-for="Precio" type="number" class="form-control"/>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div>
                    <label>Seleccione el tipo</label>
                    @Html.DropDownList("IdTipo", (IEnumerable<SelectListItem>)ViewData["Tipos"], new { @class = "form-control form-select mb-3" })
                </div>
                <div class="form-check mb-3">
                    <label class="form-check-label" asp-for="Activo"></label>
                    <input asp-for="Activo" class="form-check-input" type="checkbox">
                    <span asp-validation-for="Activo"></span>
                </div>
                <button class="btn btn-primary" type="submit">Guardar</button>
            </form>
        </div>
    </div>
    <!-- Form End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="lib/chart/chart.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/waypoints/waypoints.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>
<script src="lib/tempusdominus/js/moment.min.js"></script>
<script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<!-- Template Javascript -->
<script src="js/main.js"></script>