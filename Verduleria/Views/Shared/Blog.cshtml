@model IEnumerable<Verduleria.Models.Promocion>


<div id="blog" class="container-fluid bg-dark text-light py-5 text-center wow fadeIn">
    <h2 class="section-title py-5">Promociones</h2>
    <div class="tab-content" id="pills-tabContent">
        @if (Model.Count() > 0){
            <div class="tab-pane fade show active" id="foods" role="tabpanel" aria-labelledby="pills-home-tab">
                <ul class="carousel">
                    @foreach (var promocion in ViewData["Promociones"] as IEnumerable<Verduleria.Models.Promocion>)
                    {
                        <li class="carousel-li col-md-6">
                            <div class="card bg-transparent border my-3 my-md-0">
                                <img src="~/assets/imgs/banano.jpg" alt="template by DevCRID http://www.devcrud.com/" class="rounded-0 card-img-top mg-responsive">
                                <div class="card-body">
                                    <h2 class="text-center mb-4"><a href="#" class="badge badge-primary">@Html.DisplayFor(modelItem => promocion.Nombre)</a></h2>
                                    <h5>
                                        @Html.DisplayFor(modelItem => promocion.Descripcion)
                                    </h5>
                                    <a asp-action="CompraPromocion" asp-controller="Verduleria" asp-route-IdPromocion="@promocion.Id" class="button button-cart w-100" style="height: 30px; display: flex; align-items: center; justify-content: center;">
                                        Comprar
                                    </a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }else{
            <div class="w-100 text-center no-disponible">
                <p>De momento no hay promociones disponibles</p>
            </div>
        }
    </div>
</div>