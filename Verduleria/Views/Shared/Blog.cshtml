@model IEnumerable<Verduleria.Models.Promocion>


<div id="blog" class="container-fluid bg-dark text-light py-5 text-center wow fadeIn">
    <h2 class="section-title py-5">Promociones</h2>
    <div class="row justify-content-center">
        <div class="col-sm-7 col-md-4 mb-5">
            <ul class="nav nav-pills nav-justified mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#foods" role="tab" aria-controls="pills-home" aria-selected="true">Frutas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#juices" role="tab" aria-controls="pills-profile" aria-selected="false">Verduras</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="foods" role="tabpanel" aria-labelledby="pills-home-tab">
            <ul class="carousel">
                @foreach (var producto in ViewData["Promociones"] as IEnumerable<Verduleria.Models.Promocion>)
                {
                    <li class="carousel-li col-md-6">
                        <div class="card bg-transparent border my-3 my-md-0">
                            <img src="~/assets/imgs/banano.jpg" alt="template by DevCRID http://www.devcrud.com/" class="rounded-0 card-img-top mg-responsive">
                            <div class="card-body">
                                <h2 class="text-center mb-4"><a href="#" class="badge badge-primary">$5</a></h2>
                                <h4 class="pt20 pb20">
                                    @Html.DisplayFor(modelItem => producto.Nombre)
                                </h4>
                                <p class="text-white">
                                    @Html.DisplayFor(modelItem => producto.Descripcion)
                                </p>
                                <a href="#" class="badge badge-primary w-100" style="height: 30px; display: flex; align-items: center; justify-content: center;">
                                    Comprar
                                </a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>